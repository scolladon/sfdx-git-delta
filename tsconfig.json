{
  "extends": "./node_modules/@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ]
}
